<div class="panel panel-default">
	<div class= "panel-body">
		<div class="row">
			<div class="col-md-4">
			<%= image_tag @post.image.url(:medium) %>
				<div class="table-responsive">
				<table class="table">
				<tbody>
					<tr>
						<td><strong>Goal:</strong></td>
						<td><%= @post.title %></td>
					</tr>
					<tr>
						<td><strong>Story:</strong></td>
						<td><%= @post.body %></td>
					</tr>
				</tbody>
		   </table>
		   <%= link_to 'Motivate!', new_post_comment_path(@post), class: "btn btn-danger" %>
       </div>
      </div>
      <div class="col-md-6 col-md-offset-2">
      	

      	<% if @comments.blank? %>
      	<h3> Send words of encouragement or advice!</h3>
      	<% else %>
      		<% @comments.each do |comment| %>
      			<div class="comments">
      				<p><%= comment.body %> </p>
      				</div>
      			<% end %>	
      			<% end %>	

      </div>
		</div>
	</div>
</div> 


<%= link_to 'Back', posts_path %>